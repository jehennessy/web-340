<!DOCTYPE html>
<html lang="en">
  <% include header %>

  <body>
    <% include navbar %>

    <div class="container" role="main" style="width: 50%;">
      <br /><br />

      <h2><%= message %></h2>
      <form action="/process" method="post">
        <div class="form-group">
          <label for="txtName">Name:</label>
          <input type="text" class="form-control" id="txtName" name="txtName"/>
        </div>

        <div class="form-group">
          <!-- CSRF token -->
          <input type="hidden" name="_csrf" value="<% csrfToken %>"/>

          <button class="btn btn-secondary float-right" type="submit">Submit</button>
        </div>
      </form>

      <br /><br />

      <a href="/list">Return to Employee Directory</a>
    </div>

    <% include scripts %>
  </body>
</html>
